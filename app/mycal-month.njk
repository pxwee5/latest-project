{% extends "layouts/default.njk" %}

{% block content %}
  <div class="o-body-content__block">
    <div class="container">
      <h1 class="u-txt--veneer u-mb--5">MY PLAN</h1>
    </div>

    <div class="o-search visible-xs-block">
      <div class="container o-search__wrapper">
        <label for="news-search" class="o-search__icon" aria-label="Search">
          <span class="glyphicon glyphicon-search"></span>
        </label>
        <input id="news-search" class="o-search__input" type="search" name="" value="" placeholder="Search">
      </div>
    </div>

    <section class="c-filter">
      <div class="container">
        <button id="filterButton" type="button" data-toggle="collapse" href="#filterGroup" class="o-btn__collapsible u-ptb--2 collapsed">
          <span class="glyphicon"></span>
          Show Filters
        </button>

        <div id="filterGroup" class="collapse">
          <div class="c-filter__group">
            {% from "data/dropdowns.njk" import dropdowns %}
            <div class="c-filter__item col-xs-12 col-sm-3">
              {% set dropdown = dropdowns[0] %}
              {% include "includes/partials/dropdown.njk" %}
            </div>
            <div class="c-filter__item col-xs-12 col-sm-3">
              {% set dropdown = dropdowns[1] %}
              {% include "includes/partials/dropdown.njk" %}
            </div>
            <div class="c-filter__item col-xs-12 col-sm-3">
              {% set dropdown = dropdowns[2] %}
              {% include "includes/partials/dropdown.njk" %}
            </div>
            <div class="c-filter__item col-xs-12 col-sm-3 hidden-xs">
              <div class="c-filter__search">
                <input class="" type="search" name="" value="" placeholder="Search">
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="c-content">
      <div class="container">
        {% include 'includes/components/myplan-table-month.njk' %}
      </div>
    </section>

    <div class="container u-mt--2">
      <ul class="c-list c-list--typed">
        <li class="pdf"><a href="#"><span class="u-txt--veneer">Download</span></a></li>
      </ul>
    </div>

  </div>

{% endblock %}
