<div class="o-dropdown">
  <label for="">{{dropdown.label}}</label>

  {% if dropdown.multiClass %}
    <select name="" class="o-dropdown__select" multiple>
  {% else %}
    <select name="" class="o-dropdown__select">
  {% endif %}

  <option value="" disabled selected>{{dropdown.button}}</option>
  {% for opt in dropdown.options %}
    <option value="{{opt | replace(' ', '-')}}">{{opt}}</option>
  {% endfor %}
  </select>
</div>
