<div class="c-article">
  <a href="{{article.permalink}}">
    <div class="c-article__img" style="background-image: url({{article.image_url}})"></div>
    <div class="c-article__body">
      <div class="c-article__date">{{article.location}}</div>
      <h3 class="c-article__title">{{article.title}}</h3>
    </div>
  </a>
  <div class="c-article__footer u-split">
    <a href="#" class="o-btn o-btn--normal o-btn--small">{{article.cta_text}}</a>
    <a href="{{article.permalink}}" class="e-anchor--arrow">{{article.footer_text}}</a>
  </div>
</div>
