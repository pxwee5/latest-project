{% extends "layouts/default.njk" %}

{% block content %}
  {% from "data/heros.njk" import heros %}
  {% set hero = heros[0] %}

  <div class="o-body-content__block news">
    {% include "includes/components/header.njk" %}
    {% include "includes/components/hero-static.njk" %}

    <div class="o-search">
      <div class="container o-search__wrapper">
        <label for="news-search" class="o-search__icon" aria-label="Search News &amp; Events">
          <span class="glyphicon glyphicon-search"></span>
        </label>
        <input id="news-search" class="o-search__input" type="search" name="" value="" placeholder="Search News &amp; Events">
      </div>
    </div>

    <div class="c-filter">

      <div class="container">
        <button id="filterButton" type="button" data-toggle="collapse" href="#filterGroup" class="o-btn__collapsible u-ptb--2 collapsed">
          <span class="glyphicon"></span>
          News Filters
        </button>

        <div id="filterGroup" class="collapse">
          <div class="c-filter__group">
            <div class="c-filter__item col-xs-12 col-sm-4">
              {% from "data/dropdowns.njk" import dropdowns %}
              {% set dropdown = dropdowns[3] %}
              {% include "includes/partials/dropdown.njk" %}
            </div>
            <div class="c-filter__item col-xs-12 col-sm-4">
              {% set dropdown = dropdowns[4] %}
              {% include "includes/partials/dropdown.njk" %}
            </div>
            <div class="c-filter__item col-xs-12 col-sm-4">
              {% set dropdown = dropdowns[2] %}
              {% include "includes/partials/dropdown.njk" %}
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="c-result">
      <div class="container">
        <p class="c-result__text">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
        </p>

        <h2 class="e-heading--alt">Featured Stories</h2>
        <div class="row">
          {% from "data/news.njk" import news %}
          {% for i in range(0, 2) -%}
            {% set article = news[i] %}
            <div class="col-xs-12 col-sm-6">
              {% include "includes/components/article-news-featured.njk" %}
            </div>
          {%- endfor %}
        </div>

        <h2 class="e-heading--alt">Latest News</h2>
        <div class="row">
          {% for article in news %}
          <div class="col-xs-12 col-sm-6 col-lg-4">
            {% include "includes/components/article-news.njk" %}
          </div>
          {% endfor %}
        </div>

        <div class="c-load-more">
          <div class="c-load-more__count">Showing 7 of 123</div>
          <button id="loadMoreNews" class="o-btn o-btn--ghost o-btn--block c-load-more__btn c-spinner">Load More</button>
        </div>

      </div>

    </div>
  </div>
{% endblock %}
