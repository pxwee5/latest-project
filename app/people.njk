{% extends "layouts/default.njk" %}

{% block content %}
  {% from "data/heros.njk" import heros %}
  {% set hero = heros[2] %}

  <div class="o-body-content__block news">
    {% include "includes/components/header.njk" %}
    {% include "includes/components/hero-static.njk" %}

    <div class="o-search">
      <div class="container o-search__wrapper">
        <label for="news-search" class="o-search__icon" aria-label="Search People">
          <span class="glyphicon glyphicon-search"></span>
        </label>
        <input id="news-search" class="o-search__input" type="search" name="" value="" placeholder="Search People">
      </div>
    </div>

    <div class="c-filter">
      <div class="container">

        <button id="filterButton" type="button" data-toggle="collapse" href="#filterGroup" class="o-btn__collapsible u-ptb--2 collapsed">
          People Filters
        </button>

        <div id="filterGroup" class="collapse">
          <div class="c-filter__group">
            <div class="c-filter__item col-xs-12 col-sm-4">
              {% from "data/dropdowns.njk" import dropdowns %}
              {% set dropdown = dropdowns[5] %}
              {% include "includes/partials/dropdown.njk" %}
            </div>
            <div class="c-filter__item col-xs-12 col-sm-4">
              {% set dropdown = dropdowns[6] %}
              {% include "includes/partials/dropdown.njk" %}
            </div>
            <div class="c-filter__item col-xs-12 col-sm-4">
              {% set dropdown = dropdowns[2] %}
              {% include "includes/partials/dropdown.njk" %}
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="c-result">
      <div class="container">

        <div class="row row--inline">
          {% from "data/peoples.njk" import peoples %}
          {% for people in peoples%}
            <div class="col-xs-12 col-sm-6 col-lg-4">
              {% include "includes/partials/people-card.njk" %}
            </div>
          {% endfor %}
        </div>


        <div class="c-load-more">
          <div class="c-load-more__count">Showing 7 of 43</div>
          <button id="loadMorePeople" class="o-btn o-btn--ghost o-btn--block c-load-more__btn c-spinner">Load More</button>
        </div>

      </div>

    </div>
  </div>
{% endblock %}
